.button
  display inline-block
  width auto
  height auto
  color #fff
  background $color-primary
  padding .7em 1.6em
  text-align center
  font-size 1.8rem
  font-weight normal
  text-decoration none
  text-transform uppercase
  transition all .2s ease
  border-radius 10em

  &:hover
    color #fff
    background $color-primary - 10%

.button-ghost
  background transparent
  border 1px solid $color-primary
  font-weight 600
  font-size 1.3em
  color $color-primary

.button-off
  background #bbb
  pointer-events none
  cursor default
