bg($path, $file)
  background-image url($path-assets + $path + '/' + $file)
  background-position center center
  background-repeat no-repeat

logo-ratio($new-width)
  $base-width = 700px
  $base-height = 300px
  width $new-width
  height ($base-height / $base-width) * $new-width

wrapper()
  max-width $wrapper-size
  padding 0 2em
  margin 0 auto

  +below('desktop-big')
    padding 0 6em

  +below('tablet')
    padding 0 4em

text-rotate()
  transform skew(-4deg) rotate(-4deg)

text-form()
  font-family $font-default
  font-size 1.6rem
  outline 0
  padding .4em
  border 0
