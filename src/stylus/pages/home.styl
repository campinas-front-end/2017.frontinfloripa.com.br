.footer
  padding 5em 0
  background-color #ececec

  &-wrapper
    wrapper()
    display flex

    +below('phone')
      display block

  &-column
    flex 1
    margin 2em 0

    &.coc
      +below('phone')
        text-align center

    &.email
      text-align center

    &.social
      text-align right

      +below('phone')
        text-align center

  &-email
    color $color-text
    font-size 1.4em
    font-weight 600

  &-link
    color $color-text
    font-size 1.4em
    text-decoration none
    border-bottom 1px solid #ddd
    padding-bottom 2px
    transition border .4s ease

    &:hover
      border-color $color-primary-alt

  &-social
    list-reset()

    &-item
      display inline-block
      vertical-align top
      margin 0 3px

    &-link
      display block
      text-indent -9999em
      width 25px
      height @width
      background-position 0 0
      background-repeat no-repeat
      background-size 100% auto
      font-size 0
      text-decoration none
      border 0
      transition opacity .4s ease

      &:hover
        opacity .7

      &.twitter
        background-image url($path-svg + 'icon-twitter-circle.svg')

      &.facebook
        background-image url($path-svg + 'icon-facebook-circle.svg')

      &.github
        background-image url($path-svg + 'icon-github-circle.svg')

      img
        max-width 50px
