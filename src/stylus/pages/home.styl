    text-align center
    padding 0 2em

    &:before
      content ''
      width 500px
      height 1000px
      border-left 1px solid $color-primary
      transform rotate(-45deg)
      position absolute
      top -500px
      right -300px

      +below('phone')
        display none

    &:after
      content ''
      width 100px
      height 400px
      border-right 1px solid $color-primary
      transform rotate(45deg)
      position absolute
      top -200px
      left 0

      +below('phone')
        display none

  &-info
    color #fff
    font-size 3rem
    margin 0
    padding 1em 0

    a
      color #fff
      text-decoration none

      &:hover
        color $color-primary

    span
      color $color-primary

    +below('phone')
      font-size 2.5rem

  &-support
    padding-top 2em

    &__link
      display inline-block
      margin 0 .5em
      color #fff
      font-size 1.4rem
      font-weight normal
      text-decoration none
      padding-bottom 3px
      border-bottom 1px solid transparent
      transition border .3s ease

      &:hover
        border-bottom 1px solid $color-primary

    &__divisor
      color #000
      font-weight bold

  &-video
    position absolute
    top 0
    left 0
    min-width 100%
    min-height 100%
    width auto
    height auto

    +below('phone')
      display none

  &-logo
    margin 0 auto
    padding 0
    width 300px
    height @width
    text-indent -9999em
    bg('svg', 'logo-vertical-branco-cores.svg')
    background-size 170px

    +below('phone')
